<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- FrameLayout의 id값이 반드시 "tabcontent"로 지정되어야 함. -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <!-- 첫 번째 페이지. content1 -->
                <LinearLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8BC34A"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="TAB CONTENT 0" />

                </LinearLayout>

                <!-- 두 번째 페이지. content2 -->
                <LinearLayout
                    android:id="@+id/content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내용 삭-제"
                            android:background="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_gravity="left"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/gotoPlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일정 추가하기"
                            android:background="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_gravity="right" />

                    </LinearLayout>
                    <ListView
                        android:id="@+id/List_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:listSelector="@android:color/transparent"
                        android:visibility="gone">

                    </ListView>
                    <TextView
                        android:id="@+id/notice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="확인할 일정이 없습니다.\n새로운 일정을 추가해주세요"
                        android:visibility="visible"
                        android:paddingTop="100dp"
                        android:textAlignment="center"
                        android:textSize="20dp"/>

                </LinearLayout>

                <!-- 세 번째 페이지. content3 -->
                <LinearLayout
                    android:id="@+id/content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TableRow android:paddingTop="100dp">
                            <ImageButton android:id="@+id/imgBtn1"
                                android:src="@drawable/chat"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn2"
                                android:src="@drawable/restaurant"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn3"
                                android:src="@drawable/work"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                        </TableRow>
                        <TableRow android:paddingTop="100dp">
                            <ImageButton android:id="@+id/imgBtn4"
                                android:src="@drawable/metro"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn5"
                                android:src="@drawable/shopping"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn6"
                                android:src="@drawable/bed"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                        </TableRow>
                        <TableRow android:paddingTop="100dp">
                            <ImageButton android:id="@+id/imgBtn7"
                                android:src="@drawable/alarm"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn8"
                                android:src="@drawable/work"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                            <ImageButton android:id="@+id/imgBtn9"
                                android:src="@drawable/medical"
                                android:layout_weight="1"
                                android:background="#00ff0000" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"></View>
            <!-- TabWidget의 id값이 반드시 "tabs"로 지정되어야 함. -->
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp"/>
        </LinearLayout>
    </TabHost>
</LinearLayout>