<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPlan"
    android:orientation="vertical"
    android:weightSum="1.25">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"
            android:background="#00ff0000"
            android:text="취소"
            android:textColor="#33aabb"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"
            android:background="#00ff0000"
            android:text="완료"
            android:textColor="#33aabb"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="장소명"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="56dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/placeNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ems="10"
            android:hint="장소명을 입력해주세요"
            android:gravity="left"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="30dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_style"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/gray">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/date_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="날짜"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="141dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/dateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:ems="10"
            android:gravity="left"
            android:inputType="date"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="134dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_style" />

        <Button
            android:id="@+id/setDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:text="변경"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="148dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:background="#00ff0000"
            android:textColor="#33aabb"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/gray">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/time_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:text="도착 시간"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="267dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TimePicker
            android:id="@+id/timeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="left"
            android:timePickerMode="spinner"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="236dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/gray">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/position_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:text="위치 지정"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="526dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AddressValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:gravity="left"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="505dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/setAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:text="지도"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="505dp"
            android:layout_gravity="center_vertical"
            android:background="#00ff0000"
            android:textColor="#33aabb"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/gray">
        </View>
    </LinearLayout>


    <EditText
        android:id="@+id/latValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:visibility="gone" />

    <EditText
        android:id="@+id/lngValue"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:visibility="gone" />

</LinearLayout>